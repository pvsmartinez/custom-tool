<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>NSMicrophoneUsageDescription</key>
  <string>This app uses your microphone to transcribe speech to text in the Copilot panel.</string>

  <!-- Lock to portrait — landscape not supported on iPhone -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
  </array>

  <!-- Export compliance: app uses only standard OS-provided encryption (HTTPS/TLS).
       ITSAppUsesNonExemptEncryption=NO skips the manual compliance question in
       TestFlight and satisfies US EAR §740.17 + French ANSSI exemptions. -->
  <key>ITSAppUsesNonExemptEncryption</key>
  <false/>

  <!-- Custom URL scheme so OAuth providers can redirect back to the app -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleURLName</key>
      <string>com.pvsmartinez.cafezin</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>cafezin</string>
      </array>
    </dict>
  </array>
</dict>
</plist>

{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "mobile",
  "description": "Capability for iOS/Android mobile webview",
  "platforms": ["iOS", "android"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "http:default",
    "deep-link:default",
    { "identifier": "http:allow-fetch", "allow": [
        { "url": "https://api.githubcopilot.com/**" },
        { "url": "https://api.github.com/**" },
        { "url": "https://github.com/**" },
        { "url": "https://api.groq.com/**" }
      ]
    },
    { "identifier": "http:allow-fetch-send", "allow": [
        { "url": "https://api.githubcopilot.com/**" },
        { "url": "https://api.github.com/**" },
        { "url": "https://github.com/**" },
        { "url": "https://api.groq.com/**" }
      ]
    },
    { "identifier": "http:allow-fetch-read-body", "allow": [
        { "url": "https://api.githubcopilot.com/**" },
        { "url": "https://api.github.com/**" },
        { "url": "https://github.com/**" },
        { "url": "https://api.groq.com/**" }
      ]
    },
    { "identifier": "fs:allow-read-text-file",  "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-read-file",        "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-write-text-file", "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-write-file",      "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-read-dir",        "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-mkdir",           "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-exists",          "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-remove",          "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-copy-file",       "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] },
    { "identifier": "fs:allow-rename",          "allow": [{ "path": "$APP/**" }, { "path": "$APP_LOCAL_DATA/**" }, { "path": "$DOCUMENT/**" }] }
  ]
}
